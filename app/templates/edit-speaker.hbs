<div class="htop">
    <h2 class="text-center">Редактирование спикера: {{model.name}} {{model.surname}}</h2>
    <form class="edit-form">
        <div class="form-group row">
            <label for="inputSurname" class="col-sm-2 col-form-label text-right">Фамилия</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputSurname" value={{model.surname}} oninput={{action (mut speakerSurname) value="target.value"}}>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label text-right">Имя</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputName" value={{model.name}} oninput={{action (mut speakerName) value="target.value"}}>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPatronymic" class="col-sm-2 col-form-label text-right big">Отчество</label>
            <div class="col-sm-10">
                <input type="text" class="form-control form-control-lg" id="inputPatronymic" value={{model.patronymic}} oninput={{action (mut speakerPatronymic) value="target.value"}}>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-right">
                <button type="button" class="btn btn-primary btn-lg" onclick={{action "editSpeaker" model.id}}>Сохранить</button>
                {{#link-to "speakers" class="btn btn-outline-secondary btn-lg"}}Отмена{{/link-to}}
            </div>
        </div>
    </form>
</div>